{
  "manifest_version": 2,

  "name": "UW AutoCalendar",
  "description": "This extension will integrate UW calendar with Google calendar",
  "version": "1.0",

  "icons": {
    "16": "./images/extensionIcons/extension-icon-16.png",
    "32": "./images/extensionIcons/extension-icon-32.png",
    "48": "./images/extensionIcons/extension-icon-48.png",
    "128": "./images/extensionIcons/extension-icon-128.png"
  },

  "background": {
    "scripts": ["./background.js"]
  },

  "oauth2": {
    "client_id": "770480046288-dal2muv254r97ks59gl5br8l7n40fgfg.apps.googleusercontent.com",
    "scopes":["https://www.googleapis.com/auth/calendar"]
  },

  "content_security_policy": "script-src 'self' https://apis.google.com/ ; object-src 'self'",

  "options_page": "./HTML/options.html",

  "browser_action": {
    "default_icon": {
      "16": "./images/extensionIcons/extension-icon-16.png",
      "32": "./images/extensionIcons/extension-icon-32.png",
      "48": "./images/extensionIcons/extension-icon-48.png",
      "128": "./images/extensionIcons/extension-icon-128.png"
    },
    "default_popup": "./HTML/popup.html"
  },

  "permissions": [
    "identity",
    "https://www.google.com/*"
  ]
}